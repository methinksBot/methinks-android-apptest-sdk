<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_margin="17dp"
                    android:layout_gravity="center"
                    android:contentDescription="back_button"
                    android:src="@drawable/ic_close_black_24dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="게시판 전용 프로필 생성"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="게시판에서 사용할 별명을 입력하세요. 개인 정보 보호를위해 실명은 자제해주세요."
                android:textSize="15dp"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/new_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:hint="별명을 입력하세요"
                android:textSize="15dp"
                android:textColorHint="@color/profile_input_grey"
                android:backgroundTint="@color/deep_sky_blue"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="프로필 이미지를 선택하세요"
                android:textSize="15dp"
                android:textColor="@color/black"/>

            <GridLayout
                android:id="@+id/profile_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:columnCount="4"
                android:rowCount="30"
                android:orientation="horizontal"
                android:scrollbars="vertical">

            </GridLayout>

        </LinearLayout>

    </ScrollView>
    <TextView
        android:id="@+id/save_new_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_margin="25dp"
        android:padding="12dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_profile_save"/>
</RelativeLayout>
