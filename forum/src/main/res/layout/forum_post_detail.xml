<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/back_btn"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:layout_margin="17dp"
                            android:layout_gravity="center"
                            android:contentDescription="back_button"
                            android:src="@drawable/ic_arrow_back_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="17dp"
                            android:text="Forum"
                            android:textColor="@color/black"
                            android:textSize="18dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/writer_profile"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:layout_margin="15dp"
                            android:padding="2dp"
                            android:background="@drawable/background_post_profile"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:orientation="vertical"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/writer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seth Lee"
                                android:textSize="15dp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/post_created_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="2 hours ago"
                                android:textSize="13dp"
                                android:textColor="@android:color/darker_gray"/>

                        </LinearLayout>

                            <ImageView
                                android:id="@+id/edit_menu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_gravity="center_vertical"
                                android:visibility="invisible"
                                android:src="@drawable/ic_menu_down_grey"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/post_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Post Title 01"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/post_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="perspiciatis unde omnis iste natus error sit laudantium, totam rem aperiam, eaqueâ€¦"
                            android:textSize="14dp"
                            android:textColor="@color/black"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/images_panel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:orientation="vertical">

                        </androidx.recyclerview.widget.RecyclerView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/post_like"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/like_toggle"/>

                            <TextView
                                android:id="@+id/like_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="5dp"
                                android:text="3"
                                android:textSize="15dp"
                                android:visibility="invisible"
                                android:textColor="@color/comment_like_grey"/>

                            <ImageView
                                android:id="@+id/comment_icon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/comment_toggle"/>

                            <TextView
                                android:id="@+id/comment_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="5dp"
                                android:text="2"
                                android:textSize="15dp"
                                android:visibility="invisible"
                                android:textColor="@color/comment_like_grey"/>

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:background="@color/post_border"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/comments_panel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/writing_comment"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Comment"-->
                <!--android:textSize="20dp"-->
                <!--android:textColor="@color/white"-->
                <!--android:layout_margin="25dp"-->
                <!--android:padding="12dp"-->
                <!--android:textAlignment="center"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:background="@drawable/background_profile_save"/>-->

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/edit_menu_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#55000000">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_edit_dialog">

            <TextView
                android:id="@+id/post_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:text="Edit"
                android:textSize="18dp"
                android:textColor="@color/deep_sky_blue"
                android:textAlignment="center"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/charcoal_grey_34"/>
            <TextView
                android:id="@+id/post_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:text="Delete"
                android:textSize="18dp"
                android:textColor="@color/post_delete_color"
                android:textAlignment="center"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>