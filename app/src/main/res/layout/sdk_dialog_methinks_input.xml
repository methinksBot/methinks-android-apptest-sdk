<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingTop="18dp"
        android:orientation="vertical"
        android:background="@drawable/sdk_white_10_rounded_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/popup_methinks_top_image"
            android:layout_marginTop="12dp"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="44dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <io.methinks.sdk.common.custom.widget.MethinksTextView
            android:id="@+id/popup_methinks_title"
            app:fw="@string/font_weight_bold"
            android:textColor="@color/charcoal_grey"
            android:textSize="18dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <io.methinks.sdk.common.custom.widget.MethinksTextView
            android:id="@+id/popup_methinks_message"
            android:textColor="@color/charcoal_grey"
            android:alpha="0.7"
            android:textSize="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/popup_methinks_image"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="44dp"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <io.methinks.sdk.common.custom.widget.MethinksTextView
                android:id="@+id/popup_methinks_input_1_title"
                android:textColor="@color/charcoal_grey"
                android:textSize="12dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <io.methinks.sdk.common.custom.widget.MethinksTextView
                android:id="@+id/popup_methinks_input_1"
                android:textColor="@color/charcoal_grey"
                android:textSize="12dp"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <io.methinks.sdk.common.custom.widget.MethinksTextView
                android:id="@+id/popup_methinks_input_2_title"
                android:textColor="@color/charcoal_grey"
                android:textSize="12dp"
                android:layout_marginEnd="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <io.methinks.sdk.common.custom.widget.MethinksTextView
                android:id="@+id/popup_methinks_input_2"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:textSize="12dp"
                android:textColor="@color/charcoal_grey"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:alpha="0.12"
            android:layout_marginTop="30dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />

        <LinearLayout
            android:id="@+id/popup_methinks_controller_container"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <io.methinks.sdk.common.custom.widget.MethinksTextView
                android:id="@+id/popup_methinks_button1"
                app:fw="@string/font_weight_medium"
                android:clickable="true"
                android:background="@drawable/default_button_effect"
                android:text=" "
                android:textColor="@color/charcoal_grey"
                android:textSize="15dp"
                android:gravity="center"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:id="@+id/popup_methinks_horizontal_separator"
                android:visibility="gone"
                android:alpha="0.12"
                android:background="@color/black"
                android:layout_width="0.5dp"
                android:layout_height="match_parent" />
            <io.methinks.sdk.common.custom.widget.MethinksTextView
                android:id="@+id/popup_methinks_button2"
                app:fw="@string/font_weight_medium"
                android:clickable="true"
                android:background="@drawable/default_button_effect"
                android:text=" "
                android:textColor="@color/cornflower_blue_two"
                android:textSize="14dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>