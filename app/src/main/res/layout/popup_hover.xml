<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/popup_default_rounded_background"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <io.methinks.android.apptest.question.custom.widget.MethinksTextView
                android:id="@+id/popup_hover_bug_report"
                android:textColor="#007AFF"
                app:fw="@string/font_weight_medium"
                android:textSize="20dp"
                android:gravity="center"
                android:text="@string/patcher_bug_report"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <io.methinks.android.apptest.question.custom.widget.MethinksTextView
                android:id="@+id/popup_hover_suggestion"
                android:textColor="#007AFF"
                app:fw="@string/font_weight_medium"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/patcher_suggestion"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <io.methinks.android.apptest.question.custom.widget.MethinksTextView
            android:id="@+id/popup_hover_cancel"
            android:background="@drawable/popup_default_rounded_background"
            android:textColor="#007AFF"
            app:fw="@string/font_weight_medium"
            android:textSize="20dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/patcher_cancel"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

